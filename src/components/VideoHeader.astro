---
const { data } = Astro.props;
const { ogTitle, ogDescription, ogImage } = data;

if (!ogImage) return;
const image = ogImage[0];
---

<section class="flex w-full flex-col items-center gap-8">
  <article
    class="relative flex h-[50vh] w-full flex-col items-center justify-end md:h-[65vh]"
  >
    <img
      class="absolute size-full object-cover object-top"
      src={image.url}
      alt={ogTitle}
    />

    <span
      class="absolute inset-0 bg-gradient-to-b from-[#060d14] via-transparent to-[#060d14]"
    ></span>

    <span
      class="absolute inset-0 bg-gradient-to-r from-[#060d14] from-35% to-transparent"
    ></span>

    <div class="z-20 flex w-full flex-col justify-center px-6 md:px-20 pb-6 md:pb-20">
      <h1 class="max-w-3xl text-2xl md:text-6xl">{ogTitle}</h1>

      <div class="mt-4 md:mt-10 flex">
        <button class="rounded-xl bg-knred px-8 py-3">Reproducir</button>
        <button class="px-8 py-3">Ver en YouTube</button>
      </div>

      <p class="mt-6 md:mt-12 max-w-4xl text-sm md:text-lg text-gray-300">{ogDescription}</p>
    </div>
  </article>
</section>
