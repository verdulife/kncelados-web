<button
  id="menu"
  class="flex flex-col justify-between items-end md:hidden w-6 aspect-square ml-auto mr-2"
>
  <span class="top flex h-[3px] bg-white w-full rounded-full"></span>
  <span class="mid flex h-[3px] bg-white w-1/3 rounded-full"></span>
  <span class="bot flex h-[3px] bg-white w-3/4 rounded-full"></span>
</button>

<script>
  const menuBtn = document.querySelector("#menu");
  menuBtn?.addEventListener("click", () => {
    menuBtn.classList.toggle("active");
  });
</script>

<style>
  #menu.active {
    justify-content: center;
    align-items: center;
  }

  #menu > span {
    transition: 150ms;
  }

  #menu.active > .top {
    transform: rotate(45deg);
  }

  #menu.active > .mid {
    display: none;
  }

  #menu.active > .bot {
    width: 100%;
    transform: rotate(-45deg);
  }
</style>
