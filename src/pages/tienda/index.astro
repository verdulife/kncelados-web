---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const storeCollection = await getCollection("store");
console.log(storeCollection);
---

<Layout
  title="Tienda"
  description="Proximamente en la tienda oficial KNC Store, podrás encontrar camisetas, tote bags, láminas, stickers, fondos de pantalla y más."
>
  <section
    class="text-knc-dark flex flex-1 flex-col items-center justify-center bg-white px-6 pt-[128px] pb-48"
  >
    <header
      class="flex w-full items-center justify-between border-t-2 border-black py-6"
    >
      <h1 class="text-2xl md:text-6xl lg:text-8xl">Kncelados store</h1>

      <select class="md:p-6 md:text-xl">
        <option>Categoría</option>
        <option>Tote bags</option>
        <option>Láminas</option>
        <option>Camisetas</option>
        <option>Stickers</option>
      </select>
    </header>

    <ul
      class="grid w-full grid-cols-2 border-t-2 border-black pt-2 md:grid-cols-3 lg:grid-cols-4"
    >
      {
        storeCollection.map((item) => (
          <li class="flex size-full flex-col justify-between border-r border-black nth-[2n]:border-r-0 p-2 md:p-6 md:nth-[3n]:border-r-0 lg:nth-[4n]:border-r-0">
            <img
              src={item.data.images[0]}
              alt={item.data.title}
              class="aspect-square w-full object-contain p-4"
            />

            <button class="flex w-full items-center justify-center bg-black p-2 text-white md:p-4 md:text-xl">
              Próximamente
            </button>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
