---
import VideoOverlay from "@/components/VideoOverlay.astro";
import PlayBig from "@/lib/assets/PlayBig.astro";
import { generateSlug, lastEpisode } from "@/lib/utils";

const slug = generateSlug(lastEpisode.title);
const lastEpisode_url = `podcast/${slug}`;
---

<section
  id="logo-mask"
  class="flex h-svh w-full flex-col items-center justify-center gap-8"
>
  <div class="fixed inset-0">
    <video
      id="hero-video"
      class="absolute inset-0 -z-20 size-full scale-125 object-cover"
      src="/hero-bg.mp4"
      playsinline
      autoplay
      muted
      loop
    >
    </video>

    <VideoOverlay />
  </div>

  <a
    id="play-button"
    href={lastEpisode_url}
    class="fixed top-1/2 flex -translate-y-1/2 flex-col items-center gap-4 rounded-full shadow-2xl backdrop-blur-2xl transition-transform duration-500 hover:scale-110"
    title="Ver el último episodio"
  >
    <PlayBig class="size-32" />
    <p class="sr-only">Ver el último episodio</p>
  </a>
</section>

